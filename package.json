{
  "scripts": {
    "pika": "pika-web --dest src/web_modules",
    "postinstall": "npm run pika",
    "prebuild": "npm run pika",
    "build": "parcel build src/index.html",
    "format": "prettier --print-width 120 --write '{src,test}/**/*.js'",
    "start": "http-server src",
    "cy:open": "cypress open",
    "mb:start": "mb start",
    "mb:stop": "mb stop",
    "test": "mocha --require esm test/*.spec.js --timeout 5000 --watch",
    "test:coverage": "nyc npm run test && nyc report --reporter=html",
    "test:record": "CYPRESS_mode=record CYPRESS_apiUrl=http://localhost:3000/api npm-run-all --parallel mb start cy:open",
    "test:stub": "CYPRESS_mode=stub CYPRESS_apiUrl=http://localhost:3000/api npm-run-all --parallel mb start cy:open",
    "test:prod": "CYPRESS_mode=prod CYPRESS_apiUrl=https://conduit.productionready.io/api npm-run-all --parallel start cy:open",
    "test:consumer": "mocha pact/*Test.js --require esm",
    "test:performance": "bundlesize"
  },
  "dependencies": {
    "@hyperapp/events": "0.0.3",
    "@kwasniew/hyperapp-fx": "2.0.0-beta.2",
    "classcat": "4.0.2",
    "htm": "2.1.1",
    "hyperapp": "2.0.1",
    "hyperapp-v2-basiclogger": "0.3.0",
    "page": "1.11.4",
    "snarkdown": "1.2.2"
  },
  "devDependencies": {
    "@pika/web": "0.4.3",
    "@pollyjs/adapter-fetch": "2.6.3",
    "@pollyjs/adapter-node-http": "2.6.3",
    "@pollyjs/core": "2.6.3",
    "@pollyjs/persister-fs": "2.6.3",
    "@testing-library/dom": "6.4.1",
    "@testing-library/user-event": "7.0.1",
    "bundlesize": "0.18.0",
    "cypress": "3.4.0",
    "esm": "3.2.25",
    "http-server": "0.11.1",
    "isomorphic-unfetch": "3.0.0",
    "jsdom": "15.1.1",
    "jsdom-global": "3.0.2",
    "mocha": "6.1.4",
    "mountebank": "2.1.0",
    "node-fetch": "2.6.0",
    "npm-run-all": "4.1.5",
    "nyc": "14.1.1",
    "parcel": "2.0.0-alpha.1.1",
    "prettier": "1.18.2",
    "undom": "0.4.0",
    "whatwg-fetch": "3.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/*.js",
      "maxSize": "20 kB"
    }
  ]
}
